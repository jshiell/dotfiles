ANTIGEN="$HOME/.antigen/antigen.zsh"
if [[ ! -f "$ANTIGEN" ]]; then
    if git --version >&/dev/null; then
        git clone https://github.com/zsh-users/antigen.git "$HOME/.antigen"
    fi
fi

if [[ -f "$ANTIGEN" ]]; then
    source "$ANTIGEN"

    antigen use oh-my-zsh

    for BUNDLE in brew bundler colored-man docker docker-compose git github gradle history-substring-search knife mvn osx pass rbenv ruby sudo terminalapp tmux; do
        antigen bundle $BUNDLE
    done

    antigen bundle zsh-users/zsh-syntax-highlighting
    antigen bundle git@github.com:springernature/sn-zsh-extensions.git

    antigen theme jshiell/oh-my-zsh themes/infernus

    antigen apply
else
    echo "Unable to find/clone antigen - please install manually to activate"
fi
